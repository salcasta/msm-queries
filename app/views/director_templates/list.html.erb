<h1>List of Directors</h1>

<table border=1>

  <% Director.all.each do |a_director| %>
    <tr>
      <td><%= a_director.id %></td>
      <td>
        <img src="<%= a_director.image %>" alt="headshot" width="100">
      </td>
      <td><%= a_director.name %></td>
      <td><%= a_director.dob %></td>
      <td>
        <a href="/directors/<%= a_director.id %>">Show Details</a>
      </td>
    </tr>
  <% end %>

</table>
